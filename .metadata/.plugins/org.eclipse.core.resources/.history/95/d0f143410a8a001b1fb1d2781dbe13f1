
public abstract class 신규아이디추천 {

	public static void main(String[] args) {
		String new_id = "...!@BaT#*..y.abcdefghijklm....";
		
		// 소문자 변환
		new_id.toUpperCase();	

		// 필요한 문자만 남기기(숫자, 소문자, - , _ , . )
		String need = new_id.replaceAll("[^0-9][^a-z][^-][^_][^.]", "");
		
		System.out.println(need);
		
		// 연속된 . 제거
		String[] needs = need.split("");
		String consecutive = "";
		for(int i=0; i<needs.length; i++) {
			if(i==needs.length-1) {
				if(needs[i].equals(needs[i-1])) {
					consecutive+=needs[i];
				}
			}else {
				if(needs[i].equals(needs[i+1])) {
					continue;
				}else {
					consecutive+=needs[i];
				}
			}
		}
		
		System.out.println(consecutive);
		
		//처음이나 마지막의 . 제거
		while(true) {
			if(consecutive.charAt(0)=='.') {
				consecutive = consecutive.substring(1);
			}else if(consecutive.charAt(consecutive.length()-1)=='.') {
				consecutive = consecutive.substring(0,consecutive.length()-2);
			}else {
				break;
			}
		}
		
		System.out.println(consecutive);
	}

}
