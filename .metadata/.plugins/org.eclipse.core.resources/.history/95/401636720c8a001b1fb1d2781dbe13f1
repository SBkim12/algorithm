
public abstract class 신규아이디추천 {

	public static void main(String[] args) {
		String new_id = "...!@BaT#*..y.abcdefghijklm....";
		
		// 소문자 변환
		String lower = new_id.toLowerCase();	
		
		System.out.println(lower);

		// 필요한 문자만 남기기(숫자, 소문자, - , _ , . )
		String need = lower.replaceAll("[^0-9^a-z^-^_^.]", "");
		
		System.out.println(need);
		
		// 연속된 . 제거
		String[] needs = need.split("");
		String consecutive = "";
		for(int i=0; i<needs.length; i++) {
			if(needs.length>1) {
				if(i==needs.length-1) {
					if(needs[i].equals(needs[i-1])) {
						consecutive+=needs[i];
					}
				}else {
					if(needs[i].equals(needs[i+1])) {
						continue;
					}else {
						consecutive+=needs[i];
					}
				}
			}
		}
		
		System.out.println(consecutive);
		
		//처음이나 마지막의 . 제거
		if(consecutive.length()>0) {
			if(consecutive.charAt(0)=='.') {
				consecutive = consecutive.substring(1);
			}
			
			if (consecutive.charAt(consecutive.length()-1) == '.') {
				consecutive = consecutive.substring(0,consecutive.length()-1);
			}
		}
		
		System.out.println(consecutive);
		
		//빈공간이라면 a로 채우기
		if(consecutive.length()<1) {
			consecutive = "a";
		}
		
		//16자 이상시 15문자까지 짜르기
		String answer = "";
		if(consecutive.length()>=16) {
			answer = consecutive.substring(0,16);
		}
		
		System.out.println(answer);
		
		
	}

}
