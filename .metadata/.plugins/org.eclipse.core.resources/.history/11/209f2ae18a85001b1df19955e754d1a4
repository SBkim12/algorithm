import java.util.Arrays;
import java.util.Collections;

public class 제일작은수제거하기 {

	public int[] solution(int[] arr) {

		int index = 0;
		int small = 0;

		for (int i = 0; i < arr.length; i++) {
			if (small > arr[i]) {
				index = i;
				small = arr[i];
			}
		}

		arr.remove(i);

		if (arr.length >= 1) {
			int[] answer = arr;
		} else {
			int[] answer = new int[1];
		}

		return answer;
	}

}
