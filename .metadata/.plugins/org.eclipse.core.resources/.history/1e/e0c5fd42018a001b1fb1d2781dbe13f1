
public class 크레인인형뽑기 {

	public static void main(String[] args) {

		int[][] board = { { 0, 0, 0, 0, 0 }, { 0, 0, 1, 0, 3 }, { 0, 2, 5, 0, 1 }, { 4, 2, 4, 4, 2 },
				{ 3, 5, 1, 3, 1 } };
		int[] moves = { 1, 5, 3, 5, 1, 2, 1, 4 };

		int answer = 0;
		
		int move=0;
		for (int i = 0; i < moves.length; i++) {
			if (i % 2 == 0) {
				if(board[5][moves[i]]==0){
					System.out.println(board[5][moves[i]]);
					System.out.println("이동할 값 없음");
					move=0;
					continue;
				}
				for (int j = board.length-1; j>=0; j--) {
					if(board[j][moves[i]-1]==0) {
						System.out.println("인형의 높이 : "+ j );
						board[j-1][moves[i-1]]=0;
						break;
					}
					move = board[j][moves[i-1]];
				}
			} else {
				if(move==0) {
					continue;
				}
				for (int j = board.length-1; j>=0; j--) {
					if(board[j][moves[i]-1]==0) {
						board[j][moves[i]-1]=move;
						if(board[j][moves[i]-1]==board[j-1][moves[i]-1]) {
							board[j][moves[i]-1]=0;
							board[j-1][moves[i]-1]=0;
							answer+=2;
						}
						break;
					}
				}
			}
		}
		System.out.println(answer);
	}

}
